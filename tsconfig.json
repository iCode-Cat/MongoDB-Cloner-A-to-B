{
    "compilerOptions": {
      "target": "ES2021",
      "module": "ES2020",
      "moduleResolution": "node",
      "lib": ["ES2021"],
      "outDir": "./dist",
      "rootDir": "./",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true,
      "types": ["node"]
    },
    "include": ["src/**/*.ts", "bin/**/*.ts"],
    "exclude": ["dist", "node_modules"]
  }